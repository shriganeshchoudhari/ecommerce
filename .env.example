# ============================================================
# ShopEase - Environment Variables
# Copy this file to .env and fill in your values
# ============================================================

# --- PostgreSQL ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password
POSTGRES_DB=shopease

# --- JWT ---
# Generate a secure 64-char hex key: openssl rand -hex 32
APP_JWT_SECRET=404E635266556A586E3272357538782F413F4428472B4B6250645367566B5970
APP_JWT_EXPIRATION=86400000

# --- CORS ---
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000

# --- Cloudinary (image uploads) ---
# Get from https://cloudinary.com/console
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# --- Razorpay (payments) ---
# Get from https://dashboard.razorpay.com/app/keys
APP_RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxxx
APP_RAZORPAY_KEY_SECRET=your_razorpay_secret

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1
